{% block form %}
	{{ form_start(form) }}
	<div class="mb-3">
		{{ form_label(form.name) }}
		{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
		{{ form_errors(form.name) }}
	</div>


	<button type="submit" class="btn btn-primary">{{ buttonLabel|default('Enregistrer') }}</button>
	{{ form_end(form) }}
{% endblock %}