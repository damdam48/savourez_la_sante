{% extends 'base.html.twig' %}

{% block title %}
	admin | Savourez la santé
{% endblock %}

{% block body %}
	<section class="models">
		{% include 'Frontend/Home/_banner.html.twig' %}
	</section>
	<h1 class="admin-title">Bienvenue sur la page d'administration de recette</h1>

	<a href="{{ path('admin.recette.create') }}" class="btn radius btn-margin btn-outline-primary">Ajouter une recette</a>

	<div class="mt-4 admin-recipes-list">
		<h2>Liste des recettes</h2>
		<div class="row mt-3">
			{% for recette in recettes %}
				<div class="col-md-4 mb-4">
					<div class="card radius">
						<div class="card-body">
							<h5 class="card-title text-center">{{ recette.name }}</h5>
							<img src="{{ recette.img ? asset(recette.img) : 'placeholder.png' }}" class="card-img-top" alt="{{ recette.name }}">
							<div class="card-text mt-3">
								<div class="d-flex justify-content-between">
									<small>DateCreate :
										{{ recette.createdAt ? recette.createdAt|date('d/m/Y') : 'N/A' }}</small>
									<small>DateUpdate :
										{{ recette.updatedAt ? recette.updatedAt|date('d/m/Y') : 'N/A' }}</small>
								</div>
								<div class="d-flex justify-content-between mt-2">
									<small>Enable :
										{{ recette.online ? 'Oui' : 'Non' }}</small>
									<small>Alber Dupontel</small>
								</div>
								<div class="d-flex justify-content-between mt-3">
									<a href="{{ path('admin.recette.edit', {id: recette.id}) }}" class="btn radius btn-sm btn-outline-primary w-100 me-1">
										<i class="bi bi-pencil"></i>
										<span class="showOnPc">Modifier</span>
									</a>
									<form action="{{ path('admin.recette.delete', {id: recette.id}) }}" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette recette ?')" class="w-100 ms-1">
										<input type="hidden" name="token" value="{{ csrf_token('delete' ~ recette.id) }}">
										<button type="submit" class="btn radius btn-sm btn-outline-danger w-100">
											<i class="bi bi-trash"></i>
											<span class="showOnPc">Supprimer</span>
										</button>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% else %}
				<div class="col-12">
					<p>Aucune recette trouvée.</p>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
